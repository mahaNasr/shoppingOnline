<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CartFragment">
<LinearLayout
    android:id="@+id/linear2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cv_cart"
        android:layout_width="match_parent"
        android:layout_height="600dp"

        >

    </androidx.recyclerview.widget.RecyclerView>
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    android:elevation="3dp">

    <Button
        android:id="@+id/btnchack"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="#EC3272"
        android:fontFamily="@font/dreamsbold"
        android:text="Checkout"
        android:textColor="#fff"
        android:textSize="30dp" />
</androidx.cardview.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center"
        >
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/bag"
    android:layout_margin="32dp">

</ImageView>

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Your shopping bag is empty." />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="250dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="To add products go to products list, select desired product and click add to cart button" />
        <Button
            android:id="@+id/btn_goto_product"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="#EC3272"
            android:layout_margin="30dp"
            android:fontFamily="@font/dreamsbold"
            android:text="GO TO PRODUCTS"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>