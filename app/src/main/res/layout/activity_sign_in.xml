<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    tools:context=".activity.SignIn">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Login to your ladyShop account"
        android:fontFamily="@font/isra_thin_regular"
        android:textSize="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnsignin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:fontFamily="@font/dreamsbold"
            android:background="@color/color1"
            android:text="SIGN IN"
            android:textColor="#FBFAFA"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btnsignup"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/dreamsbold"
            android:background="@color/color2"
            android:textColor="#FBFAFA"
            android:text="SIGN up"
            android:textSize="30dp" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
   <LinearLayout
       android:id="@+id/linearsignin"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:visibility="visible"
       android:orientation="vertical">

    <TextView
        android:id="@+id/txtvemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Email address"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginTop="2dp"
        android:baselineAligned="false"

        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/txtvpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Password"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/edpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="2dp"
        android:layout_margin="4dp"
        android:inputType="textPassword" />

       <Button
           android:id="@+id/btn_signin"
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_marginTop="60dp"
           android:background="#EC3272"
           android:fontFamily="@font/amatic_bold"
           android:text="Sign in"
           android:textColor="#fff"
           android:textSize="25dp" />
   </LinearLayout>

    <LinearLayout
        android:id="@+id/linearsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Email address"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edemailsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginTop="2dp"
            android:baselineAligned="false"

            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Password"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="2dp"
            android:layout_margin="4dp"
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/txtpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Confirm Password"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edaginpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="2dp"
            android:layout_margin="4dp"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/btn_signup"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="#EC3272"
            android:fontFamily="@font/amatic_bold"
            android:text="Sign up"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/isra_thin_regular"
        android:textSize="20dp"
        android:text="Call us : +971 800 626 744 " />
</LinearLayout>