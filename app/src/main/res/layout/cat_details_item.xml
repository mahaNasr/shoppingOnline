<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_margin="8dp"
        android:elevation="15dp"
        app:cardCornerRadius="3dp">

        <ImageView
            android:id="@+id/imgc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/ladyshop" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_margin="8dp"
        android:elevation="15dp"
        app:cardCornerRadius="3dp">

        <ImageView
            android:id="@+id/imgc2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/ladyshop" />
    </androidx.cardview.widget.CardView>


</LinearLayout>
<LinearLayout
        android:id="@+id/linear"
        android:layout_width="136dp"
        android:layout_height="81dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_cat_details">

        <TextView
            android:id="@+id/txtnamecatd"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:lines="1"
            android:text="اسم المنتج"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtpricecd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="سعر المنتج"
                android:textColor="#EC3272"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pricec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ILS‎"
                android:textColor="#EC3272"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>


