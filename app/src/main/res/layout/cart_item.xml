<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="4dp"
        android:padding="8dp"
        app:cardBackgroundColor="#FDFDFD"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ladyshop"
                    />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:text="categories"
                        android:gravity="center_vertical"
                        android:textSize="20dp"
                        android:lines="1"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgdelet"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/ic_close_black_24dp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:text="Size :" />
                    <TextView
                        android:id="@+id/txtname"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="S"
                        android:gravity="center"
                        android:textSize="20dp"
                       />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="4dp"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/txt_pri"
                        android:layout_width="26dp"
                        android:layout_height="45dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:text="$"
                        android:textColor="#F17373"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_toStartOf="@+id/txt_pri"
                        android:gravity="center"
                        android:text="50"
                        android:textColor="#F17373"
                        android:textSize="20dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="4dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/imgcard"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/btnblus"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:background="#fff"
                                android:text="+"
                                android:textColor="#6A000000"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                            <TextView
                                android:id="@+id/ed_quantity"
                                android:layout_width="22dp"
                                android:layout_height="30dp"
                                android:background="#F6F4F4"
                                android:gravity="center"
                                android:textColor="#615959"
                                android:lines="1"
                                android:text="0"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/btnmin"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="#fff"
                                android:text="-"
                                android:textColor="#6A000000"
                                android:textSize="20dp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>